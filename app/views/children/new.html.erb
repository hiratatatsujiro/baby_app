<div class="devise-main">
<h1 class="login-title">子どもの登録</h1>

<%= form_with model: @child, url: children_path, class: "form-main", local: true do |f| %>
  
   <div class="form-detail">
    <%= render "devise/shared/error_messages", resource: @child %>
  <div class="field">
    <div class="content">
     <label class="name">名前</label>
    </div>
  <%= f.text_field :name ,class: "login-box"%>
  </div>

  <div class="field">
    <div class="content">
     <label class="image">画像</label>
    </div>
  <%= f.file_field :image %>
  </div>

  <div class="field">
    <div class="content">
     <label class="name">性別</label>
    </div>
  <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {}) %>
  </div>

  <div class="field">
    <div class="content">
    <div class="input-birth">
     <label class="name">生年月日</label>
    
            <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"diary-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                  </div>
   </div>
   </div>

   <div class="actions">
    <%= f.submit "登録", class: "submit-btn" %>
  </div>

<% end %>
</div>
</div>