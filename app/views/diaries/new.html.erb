<div class="devise-main">
<h1 class="login-title">日記</h1>

<%= form_with model: @diary, url: diaries_path, class: "form-main", local: true do |f| %>
  
   <div class="form-detail">
  <div class="field">
    <div class="content">
     <label class="name">タイトル</label>
    </div>
  <%= f.text_field :title ,class: "login-box"%>
  </div>

  <div class="field">
    <div class="content">
     <label class="image">画像</label>
    </div>
  <%= f.file_field :image %>
  </div>

  <div class="field">
    <div class="content">
     <label class="text">テキスト</label>
    </div>
  <%= f.text_area :text %>
  </div>

  <div class="field">
    <div class="content">
    <div class="input-birth">
     <label class="name">日付</label>
    
            <%= raw sprintf(
                  f.date_select(
                    :day,
                    class:'select-birth',
                    id:"diary-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                  </div>
   </div>
   </div>

   <div class="actions">
    <%= f.submit "投稿", class: "submit-btn" %>
  </div>

<% end %>
</div>
</div>