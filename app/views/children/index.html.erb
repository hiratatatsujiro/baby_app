
<div class="header">
 <div class="header-left">Baby app</div>
  <div class="header-right">
    <% if user_signed_in? %>
      <ul class="header-list">
        <li><%= link_to current_user.name %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete%></li>
      </ul>
    <% else %>
      <ul class="header-list">
        <li><%= link_to "新規ユーザー登録", new_user_registration_path %></li>
        <li><%= link_to "ログイン", new_user_session_path %></li>
      </ul>
    <% end %>
  </div>
 </div>

 <div class="main">
  <div class="main-children">
      <div class="register-child">
        <%= link_to "子どもの登録", new_child_path, class: "child-btn" %>
      </div>
      <div class="children-index">
        <% @children.each do |child| %>
          <div class="child-information">
            <%= child.name %>
            <%= image_tag child.image.variant(resize: '150x150')%>
          </div>
        <% end %>
      </div>
  </div>


  <div class="main-diary">
    <div class="register-child">
        <%= link_to "日記を書く", new_diary_path, class: "child-btn" %>
    </div>
    <div class="diary-index">

      <% @diaries.each do |diary| %>
        <%= link_to diary_path(diary), class: "diary-css" do %>

          <div class="diary-information">
            <div class="title">
              <%= diary.title %>
            </div>
            <div class="date">
              <%= diary.created_at %>
            </div>
            <div class="image">
              <%= image_tag diary.image.variant(resize: '300x300')%>
            </div>
          </div>
        <% end %>

      <% end %>
    </div>
  </div>

</div>


<div class="footer">
  baby is treasure ...
</div>

