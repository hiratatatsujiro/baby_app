

 <div class="main">
  <div class="main-children">
      <div class="register-child">
        <%= link_to "子どもの登録", new_child_path, class: "child-btn" %>
      </div>
      
      <div class="children-index">
        <% @children.each do |child| %>
          <% if user_signed_in? && child.user_id == current_user.id %>
          <%= link_to child_path(child) do %>
          <div class="child-information">
            <%= child.name %>
            <%= image_tag child.image.variant(resize: '150x150')%>
          </div>
          <% end %>
          <% end %>
        <% end %>
      </div>
  </div>


  <div class="main-diary">
    <div class="register-child">
        <%= link_to "日記を書く", new_diary_path, class: "child-btn" %>
    </div>
    <div class="diary-index">

      <% @diaries.each do |diary| %>
        <% if user_signed_in? && diary.user_id == current_user.id %>
        <%= link_to diary_path(diary), class: "diary-css" do %>
          <div class="diary-information">
            <div class="title">
              <%= diary.title %>
            </div>
            <div class="date">
              <%= diary.created_at %>
            </div>
            <div class="image">
              <%= image_tag diary.image.variant(resize: '300x300')%>
            </div>
          </div>
        <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>


<div class="footer">
  baby is treasure ...
</div>

