<div class="devise-main">
<h1 class="login-title">病気登録</h1>

<%= form_with model: [@child, @medical], id: "form-medical", class: "form-main", local: true do |f| %>
  
  
   <div class="form-detail">
       <%= render "devise/shared/error_messages", resource: @medical %>
    <div class="field">
    <div class="content">

    <div class="input-birth">
     <label class="name">日付</label>
    
            <%= raw sprintf(
                  f.date_select(
                    :day,
                    class:'select-birth',
                    id:"diary-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                  </div>
   </div>
   </div>

   <div class="field">
    <div class="content">
     <label class="image">画像</label>
    </div>
      <%= f.file_field :images, name: "medical[images][]", data: {index: 0} %>
   </div>

  <div id="previews" class="make-image"></div>

  <div class="field">
    <div class="content">
     <label class="name">病院</label>
    </div>
  <%= f.text_field :hospital ,class: "login-box"%>
  </div>

  <div class="field">
    <div class="content">
     <label class="name">病名</label>
    </div>
  <%= f.collection_select(:name_id, Name.all, :id, :name, {}, {}) %>
  </div>

   <div class="field">
    <div class="content">
     <label class="name">薬</label>
    </div>
  <%= f.collection_select(:drug_id, Drug.all, :id, :name, {}, {}) %>
  </div>

  <div class="field">
    <div class="content">
     <label class="text">memo</label>
    </div>
  <%= f.text_area :memo %>
  </div>

   <div class="actions">
    <%= f.submit "登録", class: "submit-btn" %>
  </div>

<% end %>
</div>
</div>